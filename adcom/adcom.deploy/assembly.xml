<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>webapps-assembly</id>
	<formats>
		<format>tar.gz</format>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<scope>runtime</scope>
			<unpack>true</unpack>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>org.keycloak:keycloak-server-overlay</include>
				<include>org.keycloak:keycloak-wildfly-adapter-dist</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<scope>runtime</scope>
			<unpack>true</unpack>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<outputDirectory>modules/system/add-ons/keycloak</outputDirectory>
			<includes>
				<include>org.adorsys.adcom:adkcloak.services</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<scope>runtime</scope>
			<unpack>true</unpack>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<outputDirectory>modules/system/layers/base</outputDirectory>
			<includes>
				<include>org.adorsys.adcom:adcore.xls</include>
				<include>org.adorsys.adcom:adcore.env</include>
				<include>org.adorsys.adcom:adkcloak.adapter</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<scope>runtime</scope>
			<unpack>false</unpack>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<outputDirectory>/standalone/deployments</outputDirectory>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<includes>
				<include>org.adorsys.adcom:adres.client</include>
				<include>org.adorsys.adcom:addashboard.client</include>
				<include>org.adorsys.adcom:adcatal.client</include>
				<include>org.adorsys.adcom:adstock.client</include>
				<include>org.adorsys.adcom:adinvtry.client</include>
				<include>org.adorsys.adcom:adcatal.server</include>
				<include>org.adorsys.adcom:adstock.server</include>
				<include>org.adorsys.adcom:adinvtry.server</include>
				<include>org.adorsys.adcom:adprocmt.server</include>
			</includes>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>src/deploy/wildfly-${version.wildfly}/standalone/configuration</directory>
			<outputDirectory>standalone/configuration</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/deploy/wildfly-${version.wildfly}/modules/</directory>
			<outputDirectory>modules</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>