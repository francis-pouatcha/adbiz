<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
    version="1.0">
    <persistence-unit name="keycloak-b2" transaction-type="RESOURCE_LOCAL">
        <class>org.adorsys.adcore.b2.jpa.B2ByteChunk</class>
        <class>org.adorsys.adcore.b2.jpa.B2DeleteMarker</class>
        <class>org.adorsys.adcore.b2.jpa.B2MigrationEntity</class>
        <class>org.adorsys.adcore.b2.jpa.B2PersContent</class>
        <class>org.adorsys.adcore.b2.jpa.B2PersHeader</class>

        <!-- JpaAuditProviders -->
        <class>org.keycloak.events.jpa.EventEntity</class>
        <class>org.keycloak.events.jpa.AdminEventEntity</class>
        
        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <property name="jboss.as.jpa.managed" value="false"/>
        </properties>
    </persistence-unit>
</persistence>
